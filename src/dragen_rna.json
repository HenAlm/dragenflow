{
    "rna": {
        "ref-dir": "{refgenome}",
        "intermediate-results-dir": "{staging}",
        "output-directory": ".",
        "output-file-prefix": "{outprefix}",
        "tumor-fastq1": "{read1}",
        "tumor-fastq2": "{read2}",
        "RGID-tumor": "{rgid}",
        "RGSM-tumor": "{rgsm}",
        "enable-map-align-output": "true",
        "read-trimmers": "quality,polyg",
        "soft-read-trimmers": "none",
        "trim-min-quality": 3,
        "enable-sort": "true",
        "enable-rna": "true",
        "enable-duplicate-marking": "true",
        "enable-variant-caller": "true",
        "annotation-file": "{gtf}",
        "rrna-filter-enable": "true",
        "rrna-filter-contig": "{rrna-contig}",
        "enable-rna-quantification": "true",
        "rna-quantification-gc-bias": "true",
        "enable-rna-gene-fusion": "true"
    },
    "ref_parameters": {
        "RefGenome": {
            "GRCh38": {
                "ref-dir": "/staging/human/reference/hg38/uscs/hg38.fa.rna",
                "gtf": "path to gtf file",
                "rrna-contig": "chrUn_GL000220v1"
            }
        }
    },
    "adapters": {
        "truseq": "/fas/NGS/pipes/dragen/configs/adapters/truseq.fasta",
        "nextera": "/fas/NGS/pipes/dragen/configs/adapters/nextera.fasta"
    },
    "scripts" : {
        "pre": "path to script",
        "post": "path to script"
    }
}
